<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_basic_gradient"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/profile_picture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="8dp"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_default_profile"
            app:shapeAppearanceOverlay="@style/ProfileAppearanceOverlay" />

        <ImageButton
            android:id="@+id/edit_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_modify" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/container_semi_card"
            android:elevation="16dp">

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/username_hint"
                android:textColor="@color/colorHint"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_username_input"
                app:layout_constraintStart_toStartOf="@+id/edit_profile_username_input" />

            <EditText
                android:id="@+id/edit_profile_username_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/container_edit_text"
                android:elevation="8dp"
                android:padding="24dp"
                android:text="Carl Johnson"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHint"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/mail_hint"
                android:textColor="@color/colorHint"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_mail_input"
                app:layout_constraintStart_toStartOf="@+id/edit_profile_mail_input" />

            <EditText
                android:id="@+id/edit_profile_mail_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/container_edit_text"
                android:elevation="8dp"
                android:padding="24dp"
                android:text="cj_deputySheriff@lifeinvader.sa"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHint"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_username_input" />

            <TextView
                android:id="@+id/confirm_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/confirm_mail_hint"
                android:textColor="@color/colorHint"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_mail_confirm_input"
                app:layout_constraintStart_toStartOf="@+id/edit_profile_mail_confirm_input" />

            <EditText
                android:id="@+id/edit_profile_mail_confirm_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/container_edit_text"
                android:elevation="8dp"
                android:padding="24dp"
                android:text="cj_deputySheriff@lifeinvader.sa"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHint"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_mail_input" />

            <TextView
                android:id="@+id/password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/password_hint"
                android:textColor="@color/colorHint"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_password_input"
                app:layout_constraintStart_toStartOf="@+id/edit_profile_password_input" />

            <EditText
                android:id="@+id/edit_profile_password_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/container_edit_text"
                android:elevation="8dp"
                android:inputType="textPassword"
                android:padding="24dp"
                android:text="dillimore90076"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHint"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_mail_confirm_input" />

            <TextView
                android:id="@+id/confirm_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/confirm_password_hint"
                android:textColor="@color/colorHint"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_password_confirm_input"
                app:layout_constraintStart_toStartOf="@+id/edit_profile_password_confirm_input" />

            <EditText
                android:id="@+id/edit_profile_password_confirm_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/container_edit_text"
                android:elevation="8dp"
                android:inputType="textPassword"
                android:padding="24dp"
                android:text="dillimore90076"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHint"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_password_input" />

            <Button
                android:id="@+id/edit_profile_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"
                android:background="@drawable/container_light_button"
                android:elevation="8dp"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:paddingRight="40dp"
                android:paddingBottom="10dp"
                android:text="@string/validate"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_password_confirm_input" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>