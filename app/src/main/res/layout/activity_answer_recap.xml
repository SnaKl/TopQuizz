<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_basic_gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/answers_title"
        android:textColor="@color/colorWhite"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/number_correct_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="8"
            android:textColor="@color/colorWhite"
            android:textSize="42dp" />

        <TextView
            android:id="@+id/slash_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="/"
            android:textColor="@color/colorWhite"
            android:textSize="42dp" />

        <TextView
            android:id="@+id/number_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="10"
            android:textColor="@color/colorWhite"
            android:textSize="42dp" />
    </com.google.android.flexbox.FlexboxLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/container_semi_card"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexboxLayout">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/number_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textViewPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/points"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="!"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />
        </com.google.android.flexbox.FlexboxLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flexboxLayout2">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_wrong"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 2"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/question_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_wrong"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 3"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 4"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 5"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 6"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 7"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 8"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 9"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
                <Button
                    android:id="@+id/question_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/container_answer_button_correct"
                    android:elevation="16dp"
                    android:padding="12dp"
                    android:text="Question 10"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>