<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neves.topquiz.controller.GameActivity"
    android:orientation="vertical"
    android:background="@drawable/background_basic_gradient">

    <TextView
        android:id="@+id/question_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38dp"
        android:layout_gravity="center"
        android:text="Question #"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/question_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/iv_office"
            android:elevation="8dp"
            />
        <TextView
            android:id="@+id/question_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="Pam convinces which coworker that he's being recruited by the CIA?"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="1">
            <Button
                android:id="@+id/question_answer1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/container_answer_button"
                android:text="Michael"
                android:textSize="24dp"
                android:elevation="16dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/question_answer2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/container_answer_button"
                android:text="Dwight"
                android:textSize="24dp"
                android:elevation="16dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/question_answer3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/container_answer_button"
                android:text="Ryan"
                android:textSize="24dp"
                android:elevation="16dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/question_answer4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/container_answer_button"
                android:text="Jim"
                android:textSize="24dp"
                android:elevation="16dp"
                android:textAllCaps="false"
                />
        </GridLayout>
    </LinearLayout>
</LinearLayout>