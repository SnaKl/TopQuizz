<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_basic_gradient"
    android:orientation="vertical"
    tools:context="com.neves.topquiz.controller.GameActivity">

    <TextView
        android:id="@+id/question_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"

        android:text="Question #"
        android:textColor="@color/colorWhite"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_textview_title">

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="391dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/iv_office" />

        <TextView
            android:id="@+id/question_question"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Pam convinces which coworker that he's being recruited by the CIA?"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:autoSizeTextType="uniform"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="4">

            <Button
                android:id="@+id/question_answer1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:text="Michael"
                android:textAllCaps="false"
                android:padding="12dp"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/question_answer2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:text="Dwight"
                android:textAllCaps="false"
                android:padding="12dp"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/question_answer3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:text="Ryan"
                android:textAllCaps="false"
                android:padding="12dp"
                android:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/question_answer4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:text="Jim"
                android:textAllCaps="false"
                android:padding="12dp"
                android:autoSizeTextType="uniform"/>
        </GridLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>