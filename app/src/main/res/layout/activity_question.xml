<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_basic_gradient"
    android:orientation="vertical"
    tools:context="com.neves.topquiz.controller.GameActivity">

    <TextView
        android:id="@+id/question_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:text="Question #"
        android:textColor="@color/colorWhite"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question_textview_title">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/question_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_office"
            app:shapeAppearanceOverlay="@style/ImageAppearanceOverlay"
            android:elevation="8dp"/>

        <TextView
            android:id="@+id/question_question"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:text="Pam convinces which coworker that he's being recruited by the CIA?"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="4">

            <Button
                android:id="@+id/question_answer1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:padding="12dp"
                android:text="Michael"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/question_answer2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:padding="12dp"
                android:text="Dwight"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/question_answer3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:padding="12dp"
                android:text="Ryan"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/question_answer4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/container_answer_button"
                android:elevation="16dp"
                android:padding="12dp"
                android:text="Jim"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false" />
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>