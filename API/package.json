{
	"name": "topquizz-api",
	"version": "1.0.0",
	"description": "Topquizz API REST",
	"main": "./src/app.js",
	"scripts": {
		"build": "babel src -d dist",
		"start": "npm run build && node dist/server.js",
		"dev": "nodemon --exec node_modules/.bin/babel-node ./src/server.js",
		"test": "jest",
		"clean": "rimraf dist && rimraf node_modules"
	},
	"author": "SnaKi",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.19.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-validator": "^6.13.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.13"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.0",
		"@babel/core": "^7.16.0",
		"@babel/node": "^7.16.0",
		"@babel/preset-env": "^7.16.4",
		"@types/jest": "^27.0.3",
		"jest": "^27.3.1",
		"jest-extended": "^1.1.0",
		"jest-json-schema": "^6.0.0",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"superagent": "^6.1.0",
		"supertest": "^6.1.6"
	},
	"jest": {
		"testEnvironment": "node",
		"testTimeout": 20000,
		"setupFilesAfterEnv": [
			"<rootDir>/test/setupTests.js",
			"jest-extended/all"
		]
	}
}
