<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">



    <TextView
    android:id="@+id/activity_main_greeting_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:padding="30sp"
    android:drawableTop="@drawable/drapeau"
    android:text="@string/welcomeTopQuiz"/>

<EditText
    android:id="@+id/activity_main_name_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:hint="Saisir votre prÃ©nom"/>

    <Button
    android:id="@+id/activity_main_play_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:padding="30sp"
    android:layout_gravity="center_horizontal"
    android:text="JOUER"
    android:background="@color/colorRed"/>

</LinearLayout>
