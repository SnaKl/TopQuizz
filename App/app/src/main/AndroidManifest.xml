<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neves.topquiz">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_quizz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_quizz_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.GameActivity"/>
        <activity android:name=".controller.ProfileActivity"/>
        <activity android:name=".controller.CreateAccountActivity"/>
        <activity android:name=".controller.MainMenuActivity"/>
        <activity android:name=".controller.LeaderboardGeneralActivity"/>
        <activity android:name=".controller.LeaderboardThemeActivity"/>
        <activity android:name=".controller.ThemesActivity"/>
        <activity android:name=".controller.EditProfileActivity"/>
        <activity android:name=".controller.CreateThemeActivity"/>
        <activity android:name=".controller.CreateQuestionActivity"/>
        <activity android:name=".controller.ValidateQuestionActivity"/>
        <activity android:name=".controller.AnswerRecapActivity"/>
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>